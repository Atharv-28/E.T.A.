<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color (Baby Blue) -->
    <item android:drawable="@color/splash_background"/>
    
    <!-- App Logo/Icon (use logo.png placed in res/drawable as @drawable/logo) -->
    <item
        android:drawable="@drawable/logo"
        android:gravity="center"
        android:width="120dp"
        android:height="120dp"/>
        
    <!-- App Name Text (Expense Track & Analyse) - kept as optional overlay in layout/activity if needed -->
    <item android:gravity="center|bottom" android:bottom="120dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</layer-list>
